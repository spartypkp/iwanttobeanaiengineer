        {
          "name": "current",
          "type": "string",
          "title": "Current slug"
        },
        {
          "name": "source",
          "type": "string",
          "title": "Source field"
        }
      ],
      "options": {
        "source": "title",
        "maxLength": 96
      }
    },
    {
      "name": "id",
      "type": "string",
      "title": "Project ID",
      "description": "A unique identifier for the project (used for routing and code references)"
    },
    {
      "name": "description",
      "type": "string",
      "title": "Short Description",
      "description": "A brief overview of the project (1-2 sentences)"
