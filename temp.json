            "list": [
              {
                "title": "Active",
                "value": "active"
              },
              {
                "title": "Completed",
                "value": "completed"
              },
              {
                "title": "Maintenance",
                "value": "maintenance"
              },
              {
                "title": "Archived",
                "value": "archived"
              },
              {
                "title": "Concept",
                "value": "concept"
              }
